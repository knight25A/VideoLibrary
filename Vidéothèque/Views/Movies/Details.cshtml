@model Vidéothèque.ViewModels.MovieRentsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="col-md-10 mx-auto" style="border: solid 1px black;
                                                    background-color: lightgrey;
                                                    padding: 0px 85px;
                                                    margin: 0px 85px;
                                                    border-radius: 25px">
    <center><h2 style="padding: 15px;">@Model.Movie.Title</h2></center>
    <br />
    @if (Model.Rents.Count() == 0)
    {
        <p>No rents placed for this movie</p>
    }
    else
    {
        <table class="table table-hover table-active">
            <thead>
                <tr>
                    <th scope="col"> Email </th>
                    <th scope="col"> Name </th>
                    <th scope="col"> Age </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rent in Model.Rents)
                {
                    <tr>
                        <td><h5 class="col-md-2">@rent.Invoice.User.Email </h5></td>
                        <td><h5 class="col-md-2">@rent.Invoice.User.Name</h5></td>
                        <td><h5 class="col-md-2">@rent.Invoice.User.Age </h5></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </main>