@model IEnumerable<Vidéothèque.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}


    <div class="container" id="filter">

        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Year <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Name <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Director <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Ranking <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
    </div>

<main role="main">

    @if (!Model.Any())
    {
        <p class="text-center">We don't have any movies yet.</p>
    }
    else
    {
        <div class="container">
            <div class="row">
               @foreach (var movie in Model)
                {
                    <div class="card">
                        <div class="col-md-3">
                            <div class="card mb-3 shadow-sm">
                                <svg class="bd-placeholder-img" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img">
                                    <title>Placeholder</title>
                                    <rect width="100%" height="100%" fill="#55595c" />
                                </svg>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.ActionLink(movie.Title, "Details", "Home", new { id = movie.Id }, null)</h5>
                                    <h6>@movie.MovieGenre.Name</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
      
    }
</main>