@model IEnumerable<Vidéothèque.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}

@section LeftMenu{
    <h5>@Html.ActionLink("HOME", "Index", "Home", new { @class = "active" })</h5>
    <h5>@Html.ActionLink("NEW", "Index", "New")</h5>
    <h5>
        <a href="#CategorySubMenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
            CATEGORY <i class="fa fa-caret-down"></i>
        </a>
    </h5>
    <ul class="collapse list-unstyled" id="CategorySubMenu">
        <li>@Html.ActionLink("Action", "Index", "")</li>
        <li>@Html.ActionLink("Adventure", "Index", "")</li>
        <li>@Html.ActionLink("Biopic", "Index", "")</li>
        <li>@Html.ActionLink("Cartoon", "Index", "")</li>
        <li>@Html.ActionLink("Crime", "Index", "")</li>
        <li>@Html.ActionLink("Disaster", "Index", "")</li>
        <li>@Html.ActionLink("Documentary", "Index", "")</li>
        <li>@Html.ActionLink("Drama", "Index", "")</li>
        <li>@Html.ActionLink("Family", "Index", "")</li>
        <li>@Html.ActionLink("Fantasy", "Index", "")</li>
        <li>@Html.ActionLink("Horror", "Index", "")</li>
        <li>@Html.ActionLink("Musical", "Index", "")</li>
        <li>@Html.ActionLink("Romance", "Index", "")</li>
        <li>@Html.ActionLink("Science fiction", "Index", "")</li>
        <li>@Html.ActionLink("Thriller", "Index", "")</li>
        <li>@Html.ActionLink("War", "Index", "")</li>
        <li>@Html.ActionLink("Western", "Index", "")</li>
    </ul>
}

    <div class="container" id="filter">

        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Year <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Name <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Director <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Ranking <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
    </div>

<main role="main">

    @if (!Model.Any())
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">
                    @foreach (var movie in Model)
                    {
                        <div class="card" style="width: 118rem;">
                            <div class="col-md-3">
                                <div class="card mb-3 shadow-sm">
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.ActionLink(movie.Title, "Details", "Home", new { id = movie.Id }, null)</h5>
                                        <h6>@movie.MovieGenre.Name</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</main>