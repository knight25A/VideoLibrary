@using PagedList.Mvc;


@model PagedList.IPagedList<Vidéothèque.Models.Movie>

@{
    ViewBag.Title = "Home Page";
}


    <div class="container" id="filter">

        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.ActionLink("Date", "Index", "Home", new { @sortOrder = "Year"}, null)
                    <i class="fas fa-circle"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.ActionLink("Title", "Index", "Home", new { @sortOrder = "Title" }, null)
                    <i class="fas fa-circle"></i>   
                </label>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.ActionLink("Price", "Index", "Home", new { @sortOrder = "Price" }, null)
                    <i class="fas fa-circle"></i>
                </label>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Ranking <i class="fa fa-caret-down"></i>
                </label>
            </div>
        </div>
    </div>

<main role="main">
        <div class="album py-5 bg-light">
            <div class="container" >

                <div class="row">
                    @foreach (var movie in Model)
                    {
                        <div class="card" style="width: 118rem;">
                            <div class="col-md-3">
                                <div class="card mb-3 shadow-sm">
                                    @if (movie.ImagePath == null)
                                    {
                                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                    }
                                    else
                                    {
                                       <img src="~/Images/@movie.ImagePath" width="265" height= "225" />
                                    }
                                        <div class="card-body">
                                        <h5 class="card-title">@Html.ActionLink(movie.Title, "Details", "Movies", new { id = movie.Id }, null)</h5>
                                        <h6>@movie.MovieGenre.Name</h6>
                                        </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>    

    <div>
        <div class="pagination" style="margin-left:400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("Index", new { page }));
        </div>
    </div>
</main>