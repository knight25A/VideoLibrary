@using PagedList.Mvc;


@model PagedList.IPagedList<Vidéothèque.Models.Movie>

@{
    ViewBag.Title = "Home Page";
}


<div id="filter">
    <div class="col-md-1"></div>
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                @Html.ActionLink("Date", "Index", "Home", new { @sortOrder = "Year" }, null)
                <i class="fa fa-sort"></i>
            </label>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                @Html.ActionLink("Title", "Index", "Home", new { @sortOrder = "Title" }, null)
                <i class="fa fa-sort"></i>
            </label>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                @Html.ActionLink("Price", "Index", "Home", new { @sortOrder = "Price" }, null)
                <i class="fa fa-sort"></i>
            </label>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                @Html.ActionLink("Director", "Index", "Home", new { @sortOrder = "Director" }, null)
                <i class="fa fa-sort"></i>
            </label>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group form-check">
            <label class="form-check-label">
                @Html.ActionLink("Ranking", "Index", "Home", new { @sortOrder = "NbRent" }, null)
                <i class="fa fa-sort"></i>
            </label>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>

<main role="main">
    <div class="album bg-light">
        <div class="container" >
            <div class="row">
                @foreach (var movie in Model)
                {
                    <div class="card">
                         <div class="col-md-3" style="margin-bottom:1%;">
                             <div class="shadow-sm">
                                 @if (movie.ImagePath == null)
                                  {
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                  }
                                  else
                                  {
                                    <a href="@Url.Action("Details", "Home", new { id = movie.Id }, null)"><img src="~/Images/@movie.ImagePath" width="265" height="225" /></a>
                                  }
                                 <div class="card-body">
                                     <h5 class="card-title"><strong>@Html.ActionLink(movie.Title, "Details", "Home", new { id = movie.Id }, null)</strong> | @movie.MovieGenre.Name | @movie.Price$</h5>
                                 </div>
                             </div>
                         </div>
                    </div>
                }
            </div>
        </div>
    </div>   
    
</main>