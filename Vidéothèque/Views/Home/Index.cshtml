@model IEnumerable<Vidéothèque.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}



<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1>Video Library</h1>
            <p class="lead text-muted">This is a Video Library Project for the class DotNet MIASHS WIC.</p>
            <!-- <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
             </p>-->
        </div>
    </section>
    @if (!Model.Any())
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">
                    @foreach (var movie in Model)
                    {
                        <div class="card" style="width: 118rem;">
                            <div class="col-md-4">
                                <div class="card mb-4 shadow-sm">
                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.ActionLink(movie.Title, "Details", "Home", new { id = movie.Id }, null)</h5>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">@movie.MovieGenre.Name</li>
                                            <li class="list-group-item">Dapibus ac facilisis in</li>
                                            <li class="list-group-item">Vestibulum at eros</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                     }
                </div>
            </div>
        </div>
    }
</main>