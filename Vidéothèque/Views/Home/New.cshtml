@model IEnumerable<Vidéothèque.Models.Movie>
@{
    ViewBag.Title = "Newly Added";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

<main role="main">
    <div class="album bg-light">
        <div class="container">
            <div class="row">
                @foreach (var movie in Model)
                {
                    <div class="card">
                        <div class="col-md-3" style="margin-bottom:1%;">
                            <div class="shadow-sm">
                                @if (movie.ImagePath == null)
                                {
                                    <a href="@Url.Action("Details", "Home", new { id = movie.Id }, null)"><svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Details", "Home", new { id = movie.Id }, null)"><img src="~/Images/@movie.ImagePath" width="265" height="225" /></a>
                                }
                                <div class="card-body">
                                    <h5 class="card-title"><strong>@Html.ActionLink(movie.Title, "Details", "Home", new { id = movie.Id }, null)</strong> | @movie.MovieGenre.Name | @movie.Price$</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</main>